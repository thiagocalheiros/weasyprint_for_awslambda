<?xml version="1.0" encoding="UTF-8"?>
<moya xmlns="http://moyaproject.com"
      xmlns:let="http://moyaproject.com/let">

    <widget name="langicon" template="widgets/flag.html">
        <signature>
            <attribute name="lang" type="text" />
        </signature>
    </widget>

    <widget name="langswitch" template="widgets/langswitch.html">
    	<signature>
    		<attribute name="languages" type="commalist"/>
    	</signature>
    </widget>

    <widget name="translate-attribute" template="widgets/translatable_attribute.html">
        <signature>
            <attribute name="sometext" type="text"/>
            <attribute name="force_translate" type="text"/>
        </signature>
    </widget>

</moya>